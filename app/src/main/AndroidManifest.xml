<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.nfls.forum">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="io.nfls.forum.forum_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="io.nfls.forum.DetailedUserInformation" ></activity>
        <activity android:name="io.nfls.forum.UserLogin" ></activity>
        <activity android:name="io.nfls.forum.DiscussionDetail_abandoned" ></activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>